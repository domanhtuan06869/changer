{
    "name": "xpro_pc",
    "version": "1.0.0",
    "author": "Danh <minhdanhsc@gmail.com>",
    "description": "Tool change device for pc",
    "productName": "xProChanger",
    "main": "index.js",
    "license": "ISC",
    "private": false,
    "copyright": "Â© 2021, xPro Team",
    "keywords": [
        "change",
        "device"
    ],
    "scripts": {
        "test": "no",
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "node obfucate.js && node remove.js && electron-forge make"
    },
    "build": {
        "appId": "com.github.danh.xpro",
        "files": [
            "app/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "extraResources"
        },
        "extraResources": [
            "./extraResources/**"
        ]
    },
    "dependencies": {
        "async-lock": "^1.3.1",
        "bootstrap": "^4.5.0",
        "bytenode": "^1.3.4",
        "electron-log": "^4.2.2",
        "electron-squirrel-startup": "^1.0.0",
        "electron-updater": "^4.3.1",
        "firebase": "^7.15.5",
        "fs-jetpack": "^2.1.0",
        "fs-readdir-recursive": "^1.1.0",
        "git": "^0.1.5",
        "javascript-obfuscator": "^2.6.3",
        "jimp": "^0.16.1",
        "jquery": "^3.5.1",
        "lodash": "^4.17.15",
        "md5-file": "^5.0.0",
        "popper.js": "^1.16.1",
        "ramda": "^0.27.1",
        "request": "github:request/request",
        "sweetalert2": "^9.17.0",
        "uuid": "^8.3.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.63",
        "@electron-forge/maker-deb": "^6.0.0-beta.63",
        "@electron-forge/maker-rpm": "^6.0.0-beta.63",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
        "@electron-forge/maker-zip": "^6.0.0-beta.63",
        "electron": "^18.0.1"
    },
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "xpro_pc"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ]
        }
    }
}
